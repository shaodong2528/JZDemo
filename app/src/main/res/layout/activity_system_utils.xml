<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:background="@color/white"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mode"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_close"
            android:textSize="24sp"
            android:text="关闭"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--wifi-->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_wifi"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="26sp"
            android:text="Wifi:" />
        <TextView
            android:id="@+id/tv_wifi_on"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/tv_wifi"
            android:gravity="center"
            android:background="@drawable/selector_btn"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="打开Wifi" />
        <TextView
            android:id="@+id/tv_wifi_off"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_wifi_on"
            android:layout_toEndOf="@+id/tv_wifi_on"
            android:layout_marginStart="20dp"
            android:background="@drawable/selector_btn"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="关闭Wifi" />
        <TextView
            android:id="@+id/tv_wifi_statue"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_wifi_on"
            android:layout_toEndOf="@+id/tv_wifi_off"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="状态:" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/wifi_list"
            android:layout_below="@+id/tv_wifi_on"
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/tv_wifi_name"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/tv_wifi_statue"
            android:text="Wifi名称:"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_wifi_pwd"
            android:layout_toEndOf="@+id/tv_wifi_name"
            android:layout_alignTop="@+id/tv_wifi_name"
            android:text="Wifi密码:"
            android:textSize="24sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_wifi_isconnect"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_wifi_pwd"
            android:layout_toEndOf="@+id/tv_wifi_pwd"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="状态:" />
        <TextView
            android:id="@+id/tv_connect_wifi"
            android:layout_alignTop="@+id/tv_wifi_name"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/tv_wifi_pwd"
            android:gravity="center"
            android:background="@drawable/selector_btn"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="连接" />
    </RelativeLayout>

    <!--蓝牙-->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_blue"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="26sp"
            android:text="蓝牙:" />
        <TextView
            android:id="@+id/tv_blue_on"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/tv_blue"
            android:gravity="center"
            android:background="@drawable/selector_btn"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="打开蓝牙" />
        <TextView
            android:id="@+id/tv_blue_off"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_blue_on"
            android:layout_toEndOf="@+id/tv_blue_on"
            android:layout_marginStart="20dp"
            android:background="@drawable/selector_btn"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="关闭蓝牙" />
        <TextView
            android:id="@+id/tv_blue_statue"
            android:gravity="center"
            android:layout_alignTop="@+id/tv_blue_on"
            android:layout_toEndOf="@+id/tv_blue_off"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="状态:" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/blue_list"
            android:layout_below="@+id/tv_blue_on"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </RelativeLayout>

    <!--Gps-->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_gps"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="26sp"
            android:text="Gps:" />
        <TextView
            android:id="@+id/tv_gps_info"
            android:gravity="center"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/tv_gps"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="" />
        <TextView
            android:id="@+id/tv_gps_statue"
            android:gravity="center"
            android:layout_marginStart="230dp"
            android:layout_alignTop="@+id/tv_gps_info"
            android:layout_toEndOf="@+id/tv_gps_info"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="" />
    </RelativeLayout>

    <!--sim卡-->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sim"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="26sp"
            android:text="Sim卡:" />
        <TextView
            android:id="@+id/tv_sim_on"
            android:gravity="center"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/tv_sim"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:background="@drawable/selector_btn"
            android:text="开启移动数据" />
        <TextView
            android:id="@+id/tv_sim_off"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/tv_sim_on"
            android:layout_toEndOf="@+id/tv_sim_on"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:background="@drawable/selector_btn"
            android:text="关闭移动数据" />
        <TextView
            android:id="@+id/tv_sim_sing"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/tv_sim_on"
            android:layout_toEndOf="@+id/tv_sim_off"
            android:paddingStart="10dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="" />
        <FrameLayout
            android:layout_alignTop="@+id/tv_sim_sing"
            android:layout_toEndOf="@+id/tv_sim_sing"
            android:background="#70000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sim_icon"
                android:layout_marginStart="20dp"
                android:layout_width="50px"
                android:layout_height="50px" />
        </FrameLayout>
    </RelativeLayout>

    <!--声音-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_music"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="26sp"
            android:text="音乐:" />
        <TextView
            android:id="@+id/tv_play"
            android:gravity="center"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/tv_music"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:background="@drawable/selector_btn"
            android:text="播放音乐" />
        <TextView
            android:id="@+id/tv_stop"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/tv_play"
            android:layout_toEndOf="@+id/tv_play"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:background="@drawable/selector_btn"
            android:text="暂停音乐" />
    </RelativeLayout>

</LinearLayout>