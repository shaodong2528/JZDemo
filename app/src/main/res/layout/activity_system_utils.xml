<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_mode"
            android:textSize="32sp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_close"
            android:textSize="24sp"
            android:text="关闭"
            android:paddingEnd="5dp"
            android:paddingTop="5dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!--wifi-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/tv_wifi_statue"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:singleLine="true"
            android:textSize="22sp"
            android:text="" />
        <TextView
            android:id="@+id/tv_wifi_name"
            android:text=""
            android:singleLine="true"
            android:textSize="24sp"
            android:layout_marginStart="20dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"/>
    </LinearLayout>

    <!--蓝牙-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_blue_statue"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_loading"
                android:text="正在扫描附近蓝牙设备..."
                android:textSize="22sp"
                android:textColor="#00ff00"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/blue_list"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </FrameLayout>

    </LinearLayout>

    <!--Gps-->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_gps"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:textSize="22sp"
            android:text="Gps状态:" />
        <TextView
            android:id="@+id/tv_gps_info"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="" />
    </LinearLayout>

    <!--sim卡-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sim"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="Sim卡状态:" />

        <TextView
            android:id="@+id/tv_sim_sing"
            android:gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="" />
        <FrameLayout
            android:background="#70000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/sim_icon"
                android:layout_marginStart="20dp"
                android:layout_width="50px"
                android:layout_height="50px" />
        </FrameLayout>
    </LinearLayout>

    <!--声音-->
    <RelativeLayout
        android:layout_marginStart="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_music"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:text="音乐:" />
        <TextView
            android:id="@+id/tv_play"
            android:gravity="center"
            android:layout_marginStart="100dp"
            android:layout_alignTop="@+id/tv_music"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:background="@drawable/selector_btn"
            android:text="播放音乐" />
        <TextView
            android:id="@+id/tv_stop"
            android:gravity="center"
            android:layout_marginStart="20dp"
            android:layout_alignTop="@+id/tv_play"
            android:layout_toEndOf="@+id/tv_play"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textSize="22sp"
            android:background="@drawable/selector_btn"
            android:text="暂停音乐" />
    </RelativeLayout>

</LinearLayout>